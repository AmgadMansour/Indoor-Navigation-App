<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".activity.SignUpActivity">

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Sign Up"
            android:textSize="24dp" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/first_name"
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_marginTop="42dp"
            android:text="First Name"
            android:textSize="18dp" />

        <com.devspark.robototextview.widget.RobotoEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_name_field"
            android:layout_below="@+id/first_name"
            android:layout_alignParentStart="true" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/last_name"
            android:text="Last Name"
            android:textSize="18dp"
            android:layout_below="@+id/first_name_field"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp" />

        <com.devspark.robototextview.widget.RobotoEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/last_name_field"
            android:layout_below="@+id/last_name"
            android:layout_alignParentStart="true" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/day"
            android:layout_below="@+id/last_name_field"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp"
            android:text="Day"
            android:textSize="18dp" />

        <com.devspark.robototextview.widget.RobotoEditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/day_field"
            android:layout_below="@+id/day"
            android:layout_alignParentStart="true" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/month"
            android:layout_below="@+id/last_name_field"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="40dp"
            android:text="Month"
            android:textSize="18dp" />

        <com.devspark.robototextview.widget.RobotoEditText
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:id="@+id/month_field"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/month"
            android:layout_alignParentStart="true" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/year"
            android:layout_below="@+id/last_name_field"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="100dp"
            android:text="Year"
            android:textSize="18dp" />

        <com.devspark.robototextview.widget.RobotoEditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/year_field"
            android:layout_marginLeft="100dp"
            android:layout_below="@+id/year"
            android:layout_alignParentStart="true" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:layout_below="@+id/last_name_field"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="200dp"
            android:text="Gender"
            android:textSize="18dp" />

        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender_field"
            android:layout_alignBottom="@+id/year_field"
            android:layout_alignStart="@+id/gender"
            android:layout_alignParentEnd="true"
            android:spinnerMode="dropdown" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_below="@+id/gender_field"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp"
            android:text="Username"
            android:textSize="18dp" />

        <com.devspark.robototextview.widget.RobotoEditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/username_field_signup"
            android:layout_below="@+id/username"
            android:layout_alignParentStart="true" />

        <com.devspark.robototextview.widget.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:layout_below="@+id/gender_field"
            android:layout_alignParentStart="true"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="170dp"
            android:text="Password"
            android:textSize="18dp" />

        <com.devspark.robototextview.widget.RobotoEditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/password_field_signup"
            android:layout_marginLeft="170dp"
            android:layout_below="@+id/username"
            android:layout_alignParentStart="true"
            android:password="true" />

        <android.support.v7.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_up"
            android:layout_below="@+id/username_field_signup"
            android:layout_centerHorizontal="true"
            android:text="Sign Up"
            android:textColor="@android:color/white"
            android:background="@color/materialBlue"
            android:layout_marginTop="33dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"></FrameLayout>
    </RelativeLayout>
</ScrollView>
